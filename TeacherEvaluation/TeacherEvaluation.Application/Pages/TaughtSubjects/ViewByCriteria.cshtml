@page
@model TeacherEvaluation.Application.Pages.TaughtSubjects.ViewByCriteriaModel
@{
    ViewData["Title"] = "Taught Subjects";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/dataTable.js"></script>
}

<h4 class="row align-input-center add-top-margin">View Taught Subjects by Criteria</h4>

<div class="row align-input-center add-top-margin">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department"></label><br />
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.Department>()"
                        class="set-width-dropdown">
                    <option selected="selected">Please select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="TaughtSubjectType">Taught Subject Type</label><br />
                <select asp-for="TaughtSubjectType" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.TaughtSubjectType>()"
                        class="set-width-dropdown">
                    <option selected="selected">Please select</option>
                </select>
                <span asp-validation-for="TaughtSubjectType" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-dark set-width-dropdown add-margin-top-35" />
            </div>
        </form>
    </div>
</div>


@if (Model.TableIsVisible)
{
    <table id="taught-subjects-index" class="table table-striped table-bordered set-max-width">
        <thead>
            <tr>
                <th>
                    Teacher Name
                </th>
                <th>
                    Subject Title
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TaughtSubjects)
            {
                var fullName = item.Teacher.User.LastName + " " + item.Teacher.User.FathersInitial + " " + item.Teacher.User.FirstName;
                <tr>
                    <td>
                        @fullName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <br />
}
