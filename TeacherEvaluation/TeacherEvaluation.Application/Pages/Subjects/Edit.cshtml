@page "{id}"
@model TeacherEvaluation.Application.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<h4 class="row align-input-center add-top-margin">Edit Subject</h4>
<hr />
<div class="row align-input-center add-top-margin">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectId" />
            <div class="form-group">
                <label asp-for="SubjectName" class="control-label"></label>
                <input asp-for="SubjectName" class="form-control" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCredits" class="control-label"></label>
                <input asp-for="NumberOfCredits" class="form-control" />
                <span asp-validation-for="NumberOfCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" id="form-button" />
            </div>
        </form>
    </div>
</div>


