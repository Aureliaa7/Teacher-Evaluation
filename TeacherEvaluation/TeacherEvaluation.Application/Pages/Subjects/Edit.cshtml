@page "{id}"
@model TeacherEvaluation.Application.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h4 class="row align-input-center add-top-margin">Edit Subject</h4>
<hr />
<div class="jumbotron subject-jumbotron">
    <form method="post">
        <partial name="_SubjectPartial" model="Model" />

        <div class="row my-row">
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-dark form-control" id="form-button" />
            </div>
        </div>
    </form>
    <div>
        <br />
        <h5><a asp-page="./Index">Back</a></h5>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
