@model TeacherEvaluation.Application.Pages.Subjects.SubjectBaseModel


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row my-row">
    <div class="col-md-5">
        <label asp-for="SubjectName" class="control-label"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="col-md-5">
        <label asp-for="NumberOfCredits" class="control-label"></label>
        <input asp-for="NumberOfCredits" class="form-control" />
        <span asp-validation-for="NumberOfCredits" class="text-danger"></span>
    </div>
</div>

<div class="row my-row">
    <div class="col-md-5">
        <label asp-for="StudyYear"></label><br />
        <input asp-for="StudyYear" class="form-control">
        <span asp-validation-for="StudyYear"></span>
    </div>
    <div class="col-md-5">
        <label asp-for="StudyProgramme"></label><br />
        <select id="study-programme" asp-for="StudyProgramme" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.Enums.StudyProgramme>()"
                class="form-control" onchange="get_domains()">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="StudyProgramme" class="text-danger" />
    </div>
</div>

<div class="row my-row">
    <div class="col-md-5">
        <label asp-for="StudyDomainId" class="control-label"></label><br />
        <select id="domain" asp-for="StudyDomainId" class="form-control" onchange="get_specializations()">
            <option selected disabled hidden>Please select</option>
        </select>
        <span asp-validation-for="StudyDomainId" class="text-danger" />
    </div>
    <div class="col-md-5">
        <label asp-for="SpecializationId" class="control-label"></label><br />
        <select id="specialization" asp-for="SpecializationId" class="form-control">
            <option selected disabled hidden>Please select</option>
        </select>
        <span asp-validation-for="SpecializationId" class="text-danger" />
    </div>
</div>

<div class="row my-row">
    <div class="col-md-5">
        <label asp-for="Semester"></label><br />
        <select asp-for="Semester" asp-items=
                "Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.Enums.Semester>()" class="form-control">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="Semester" class="text-danger" />
    </div>
    <div class="col-md-5">
        <br/>
        <input type="submit" value="Save" class="btn btn-dark form-control"/>
    </div>
</div>
