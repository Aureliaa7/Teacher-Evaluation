@page "{id}"
@model TeacherEvaluation.Application.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h3 class="row align-input-center add-top-margin">Are you sure you want to delete this?</h3>
<hr/>
<div class="jumbotron subject-jumbotron">
    <dl class="row align-input-center">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumberOfCredits)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NumberOfCredits)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.StudyYear)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.StudyYear)
        </dd>
        <dt class="col-sm-4">
            Study programme
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Specialization.StudyDomain.StudyProgramme)
        </dd>
        <dt class="col-sm-4">
            Study domain
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Specialization.StudyDomain.Name)
        </dd>
        <dt class="col-sm-4">
            Specialization
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Specialization.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-danger form-control" />
    </form>
    <div>
        <br />
        <h5><a asp-page="./Index">Back</a></h5>
    </div>
</div>
