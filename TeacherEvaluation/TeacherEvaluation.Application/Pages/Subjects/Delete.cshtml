@page "{id}"
@model TeacherEvaluation.Application.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h3 class="row align-input-center add-top-margin">Are you sure you want to delete this?</h3>
<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row align-input-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfCredits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfCredits)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
