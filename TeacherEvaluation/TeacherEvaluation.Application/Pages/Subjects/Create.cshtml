@page
@model TeacherEvaluation.Application.Pages.Subjects.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<h4 class="row align-input-center add-top-margin">Create Subject</h4>
<hr />
<div class="jumbotron subject-jumbotron">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row my-row">
            <div class="col-md-6">
                <label asp-for="SubjectName" class="control-label">Subject title</label>
                <input asp-for="SubjectName" class="form-control" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-row">
            <div class="col-md-6">
                <label asp-for="NumberOfCredits" class="control-label">Number of credits</label>
                <input asp-for="NumberOfCredits" class="form-control" />
                <span asp-validation-for="NumberOfCredits" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-row">
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn btn-dark form-control" id="form-button" />
            </div>
        </div>
    </form>
</div>


