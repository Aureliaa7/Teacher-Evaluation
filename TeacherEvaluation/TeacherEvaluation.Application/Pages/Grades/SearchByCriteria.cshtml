@page "{handler?}"
@model TeacherEvaluation.Application.Pages.Grades.SearchByCriteriaModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<h4 class="row align-input-center add-top-margin">Search grades by criteria</h4>
<hr />
<div class="jumbotron taught-subject-jumbotron">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row my-row">
            <div class="col-md-6">
                <label asp-for="Department"></label><br />
                <select id="department-field" asp-for="Department" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.Enums.Department>()"
                        class="form-control" onchange="get_teachers_by_department()">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger" />
            </div>
            <div class="col-md-6">
                <label asp-for="TeacherId" class="control-label"></label><br />
                <select id="teacher-field" asp-for="TeacherId" class="form-control" onchange="get_assigned_subjects_by_teacher_id()">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger" />
            </div>
        </div>
        <div class="row my-row">
            <div class="col-md-6">
                <label asp-for="SubjectId" class="control-label"></label><br />
                <select id="subject" asp-for="SubjectId" class="form-control" onchange="get_taught_subject_types_by_teacher_and_subject()">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger" />
            </div>
            <div class="col-md-6">
                <label asp-for="Type"></label><br />
                <select id="type" asp-for="Type" class="form-control">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-6">
                <label class="control-label" asp-for="FromYear"></label>
                <input class="form-control" asp-for="FromYear" />
                <span asp-validation-for="FromYear" class="text-danger" />
            </div>
            <div class="col-md-6">
                <br />
                <input id="submit-button" type="submit" value="Search" class="btn btn-dark form-control"/>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/teachers.js"></script>
    <script src="~/js/taughtSubjects.js"></script>
}
