@page
@model TeacherEvaluation.Application.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container" style="margin-top: -50px; width:650px;">
    @if (Model.ErrorMessages.Count > 0)
    {
        <div class="alert alert-danger">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            @foreach (var error in Model.ErrorMessages)
            {
                <span>@error</span>
                <br />
                <br />
            }
        </div>
    }

    <form method="post" style="height: 250px; width: 550px;">
        <div class="row align-input-center">
            <div class="col-md-6">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="row align-input-center">
            <div class="col-md-6">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-6">
                <button class="btn btn-dark" id="login-button" type="submit">Login</button>
            </div>
        </div>
    </form>
</div>


@section scripts{
    <partial name="_ValidationScriptsPartial" />
}