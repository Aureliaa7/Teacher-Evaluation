@page
@model TeacherEvaluation.Application.Pages.Evaluations.Forms.QuestionsWithOptionAnswer.EvaluateTeacherModel
@{
    ViewData["Title"] = "Evaluate " +
                "Teacher";
    Layout = "~/Pages/Shared/_StudentLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/fillFormWithAnswerOption.js"></script>
}

<h4 class="row align-input-center add-top-margin">Evaluate your teachers</h4>
<hr />
<div class="row my-row">
    <div class="col-md-3">
        <form method="post">

            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject</label>
                <select id="subject-field" asp-for="SubjectId" asp-items="@Model.Subjects" class="form-control set-width-280"
                        onchange="disable_or_enable_btn()">
                    <option selected>Select subject</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Type">Taught Subject Type</label>
                <select id="type-field" asp-for="Type" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.TaughtSubjectType>()"
                        class="form-control set-width-280" onchange="disable_or_enable_btn()">
                    <option selected>Please select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>

            <div class="form-group">
                <label class="control-label">Teacher</label>
                <input id="teacher-field" class="form-control set-width-280" disabled />
            </div>

            <div class="form-group">
                @for (var contor = 0; contor < 10; contor++)
                {
                    <label>Question @(contor+1)</label>
                    <textarea id="question" asp-for="Questions.ElementAt(contor).Question" class="form-control set-width-280 non-resizable"
                              rows="3" cols="50" readonly></textarea>
                    <select asp-for="@Model.Answers[contor]" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.OptionAnswer>()"
                            class="form-control set-width-280">
                        <option selected>Choose answer</option>
                    </select><br />
                }
            </div>
            <input type="submit" value="Submit" class="btn btn-dark" id="submit-form-btn" />
        </form>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="myModal" style="align-self:center; margin-top:130px;">
    <div class="modal-sm modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change input data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You've already evaluated this teacher for the selected subject!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
