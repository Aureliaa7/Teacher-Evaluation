@page "{handler?}"
@model TeacherEvaluation.Application.Pages.Evaluations.Forms.QuestionsWithOptionAnswer.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_DeanLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<h4 class="row align-input-center add-top-margin">Create evaluation form with answer options</h4>
<hr />
<div class="row my-row">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnrollmentState">For enrollment status</label><br />
                <select asp-for="EnrollmentState" asp-items="@Model.EnrollmentStates"
                        class="form-control set-width-dropdown">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="EnrollmentState" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="NumberOfAttendances">Minimum number of attendances</label><br />
                <input asp-for="NumberOfAttendances" class="form-control">
                <span asp-validation-for="NumberOfAttendances"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate">Start date</label><br />
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate">End date</label><br />
                <input asp-for="EndDate" class="form-control">
                <span asp-validation-for="EndDate"></span>
            </div>

            <div class="form-group">
                @for (var contor = 0; contor < 10; contor++)
                {
                    <label>Question @(contor+1)</label>
                    <textarea id="question" asp-for="Questions[contor]" class="form-control" rows="3" cols="50"></textarea>
                    <span asp-validation-for="Questions[contor]"></span>
                }
            </div>
            <input type="submit" value="Submit" class="btn btn-dark" />
        </form>
    </div>
</div>

