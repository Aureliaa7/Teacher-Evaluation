@page
@model TeacherEvaluation.Application.Pages.Enrollments.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h3 class="row align-input-center add-top-margin">Are you sure you want to delete this?</h3>
<hr />

<div class="jumbotron enrollment-jumbotron">
    <partial name="_EnrollmentDetailsPartial" model="Model" />
    <form method="post">
        <input type="hidden" asp-for="EnrollmentId" />
        <input type="submit" value="Delete" class="btn btn-danger form-control" />
    </form>
    <div>
        <br />
        <h5><a asp-page="./Index">Back</a></h5>
    </div>
</div>
