@page "{handler?}"
@model TeacherEvaluation.Application.Pages.Enrollments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/enrollStudent.js"></script>
}

<h4 class="row align-input-center add-top-margin">Enroll Student</h4>
<hr />
<div class="row my-row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student Name</label><br />
                <select id="student-id-field" asp-for="StudentId" asp-items="@Model.Students" class="form-control set-width-dropdown" onchange="update_data()">
                    <option>Select student</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject</label><br />
                <select id="subject-id-field" asp-for="SubjectId" asp-items="@Model.Subjects" class="form-control set-width-dropdown" onchange="update_data()">
                    <option>Select subject</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Type">Taught Subject Type</label><br />
                <select id="type-id-field" asp-for="Type" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.TaughtSubjectType>()"
                        class="form-control set-width-dropdown" onchange="update_data()">
                    <option selected disabled hidden>Please select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">Teacher Name</label><br />
                <select id="teacher-id-field" asp-for="TeacherId" class="form-control set-width-dropdown" onclick="check_enrollment_existence()">
                </select>
                <span asp-validation-for="TeacherId" class="text-danger" />
            </div>

            <div class="form-group">
                <label class="control-label">Info</label>
                <input id="info-field" class="form-control set-width-dropdown" disabled />
            </div>

            <div class="form-group">
                <input id="enroll-button" type="submit" value="Enroll" class="btn btn-dark set-width-dropdown" />
            </div>
        </form>
    </div>
</div>




