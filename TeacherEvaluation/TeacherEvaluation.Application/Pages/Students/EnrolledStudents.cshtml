@page
@model TeacherEvaluation.Application.Pages.Students.EnrolledStudentsModel
@{
    ViewData["Title"] = "EnrolledStudents";
    Layout = "~/Pages/Shared/_TeacherLayout.cshtml";
}

@section scripts{
    <script src="~/js/dataTable.js"></script>
}

<h4 class="row align-input-center add-top-margin">Enrolled Students</h4>

<table id="my-table" class="table table-striped table-bordered set-max-width">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Study Year
            </th>
            <th>
                Study Programme
            </th>
            <th>
                Section
            </th>
            <th>
                Group
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EnrolledStudents)
        {
            var fullName = item.User.LastName + " " + item.User.FathersInitial + " " + item.User.FirstName;
            <tr>
                <td>
                    @fullName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyYear)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.StudyProgramme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
            </tr>
        }
    </tbody>
</table>



