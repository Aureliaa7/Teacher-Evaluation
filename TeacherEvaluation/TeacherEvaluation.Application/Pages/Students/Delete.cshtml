@page "{id}"
@model TeacherEvaluation.Application.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h3 class="row align-input-center add-top-margin">Are you sure you want to delete this?</h3>
<hr />

<div class="jumbotron jumbotron-details">
    <partial name="_StudentDetailsPartial" model="Model" />

    <form method="post">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger form-control" />
    </form>
    <div>
        <br />
        <h5><a asp-page="./Index">Back</a></h5>
    </div>
</div>
