@model TeacherEvaluation.Application.Pages.Students.StudentBaseModel

<div class="add-margin-bottom">
    <table id="students-index" class="table table-dark table-bordered set-max-width">
        <thead>
            <tr>
                <th>
                    Student Name
                </th>
                <th>
                    Study Year
                </th>
                <th>
                    Study Programme
                </th>
                <th>
                    Study Domain
                </th>
                <th>
                    Specialization
                </th>
                <th>
                    Group
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
                var fullName = item.User.LastName + " " + item.User.FathersInitial + " " + item.User.FirstName;
                <tr>
                    <td>
                        @fullName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.StudyDomain.StudyProgramme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.StudyDomain.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group)
                    </td>
                    @if (Model.CurrentRole.IsAdmin)
                    {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>