@model TeacherEvaluation.Application.Pages.Students.StudentBaseModel

<div class="add-margin-bottom">
    <table id="students-index" class="table table-dark table-bordered set-max-width">
        <thead>
            <tr>
                <th>
                    Student name
                </th>
                <th>
                    Study year
                </th>
                <th>
                    Study programme
                </th>
                <th>
                    Study domain
                </th>
                <th>
                    Specialization
                </th>
                <th>
                    Group
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
                var fullName = item.User.LastName + " " + item.User.FathersInitial + " " + item.User.FirstName;
                <tr>
                    <td>
                        @fullName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.StudyDomain.StudyProgramme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.StudyDomain.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group)
                    </td>
                    @if (Model.CurrentRole.IsAdmin)
                    {
                    <td>
                        <div class="row">
                            <a class="nav-link white-link" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> 
                            <a class="nav-link white-link" asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a> 
                            <a class="nav-link white-link" asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </div>
                     </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>