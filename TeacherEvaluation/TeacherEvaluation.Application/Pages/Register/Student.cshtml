@page
@model TeacherEvaluation.Application.Pages.Register.StudentModel
@{
    ViewData["Title"] = "Student";
    Layout = "_AdminLayout";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="container add-margin-bottom">
    <form method="post">
        <div class="row my-row">
            <div class="col-md-3">
                <label asp-for="FirstName">First name</label><br />
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="col-md-3 add-left-margins">
                <label asp-for="LastName">Last name</label><br />
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-3">
                <label asp-for="PIN"></label><br />
                <input asp-for="PIN" class="form-control">
                <span asp-validation-for="PIN"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="FathersInitial">Father's initial</label><br />
                <input asp-for="FathersInitial" class="form-control">
                <span asp-validation-for="FathersInitial"></span>
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-3">
                <label asp-for="StudyYear"></label><br />
                <input asp-for="StudyYear" class="form-control">
                <span asp-validation-for="StudyYear"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="StudyProgramme"></label><br />
                <select asp-for="StudyProgramme" asp-items="Html.GetEnumSelectList<TeacherEvaluation.Domain.DomainEntities.StudyProgramme>()" class="set-width-dropdown">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="StudyProgramme" class="text-danger" />
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-3">
                <label asp-for="Section"></label><br />
                <input asp-for="Section" class="form-control">
                <span asp-validation-for="Section"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Group"></label><br />
                <input asp-for="Group" class="form-control">
                <span asp-validation-for="Group"></span>
            </div>
        </div>

        <div class="row my-row">
            <div class="col-md-3">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="row my-row">
            <input type="submit" value="Register student" class="btn btn-dark" />
        </div>
    </form>
</div>


