            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StudyDomain)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StudyDomain)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Specialization)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Specialization)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StudyYear)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StudyYear)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Group)
