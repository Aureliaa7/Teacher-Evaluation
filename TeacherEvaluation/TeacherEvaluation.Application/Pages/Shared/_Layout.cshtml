<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpg" href="~/images/TeacherEvaluationLogo.png" />
    <title>@ViewData["Title"] - Teacher Evaluation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="login-image">
    <div class="container add-margin-bottom-80">
        <div style="margin-right:-150px;">
            <img style="width:300px; height:220px; float:right;" src="~/images/TeacherEvaluationLogo.png" />
        </div>
        <main role="main" class="pb-3" style="clear:both;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark" style="margin-top:200px;">
        <div class="container">
            &copy; <script>document.write(new Date().getFullYear())</script> - Teacher Evaluation
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
