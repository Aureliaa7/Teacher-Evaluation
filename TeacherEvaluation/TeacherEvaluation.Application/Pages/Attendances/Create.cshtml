@page
@model TeacherEvaluation.Application.Pages.Attendances.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_TeacherLayout.cshtml";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/addAttendance.js"></script>
}

<h4 class="row align-input-center add-top-margin">Add Attendance</h4>
<hr />
<div class="row my-row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject Title</label><br />
                <select id="subject" asp-for="SubjectId" asp-items="@Model.Subjects" class="form-control set-width-dropdown" onchange="get_taught_subject_types()">
                    <option>Select subject</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Type">Taught Subject Type</label><br />
                <select id="type" asp-for="Type" class="form-control set-width-dropdown" onclick="get_enrolled_students()">
                    <option>Please select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label><br />
                <select id="student" asp-for="StudentId" class="form-control set-width-dropdown">
                    <option>Select student</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control set-width-dropdown"  data-provide="datepicker" data-date-autoclose="true" data-date-format="yyyy-mm-dd"/>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark set-width-dropdown" />
            </div>
        </form>
    </div>
</div>
