@page
@model TeacherEvaluation.Application.Pages.Attendances.AttendancesForSubjectModel
@{
    ViewData["Title"] = "Attendances";
    Layout = "~/Pages/Shared/_StudentLayout.cshtml";
}

<h4 class="row align-input-center add-top-margin">Attendances</h4>
<hr/>
<div class="add-margin-bottom">
    @if (Model.Attendances.Any())
    {
    <table class="table table-dark table-striped table-bordered set-max-width">
        <thead>
            <tr>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Attendances)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <h5 class="align-text-center">There are no attendances</h5>
    }
</div>


